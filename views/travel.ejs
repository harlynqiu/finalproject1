}
.column {
    float: left;
    margin-left: 80px;
    width: 25%;
    padding: 4 10px;
    
  }
  
  /* Remove extra left and right margins, due to padding */
  .row {margin: 0 -5px;
    align-items: center;}
  
  /* Clear floats after the columns */
  .row:after {
    content: "";
    display: table;
    clear: both;
  }
  
  /* Responsive columns */
  @media screen and (max-width: 600px) {
    .column {
      width: 100%;
      display: block;
      margin-bottom: 20px;
      align-items: center;
    }
  }
  
  /* Style the counter cards */
  .card {
    box-shadow: 0 4px 8px 0 rgba(0, 0, 0, 0.2);
    padding: 16px;
    text-align: center;
    background-color: #f1f1f1;
    align-items: center;
  }


  .slide-content{
    margin: 0 70px;
    align-items: center;
}

.card{
